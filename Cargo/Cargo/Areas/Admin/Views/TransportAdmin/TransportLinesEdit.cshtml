@{
    ViewBag.Title = "TransportLinesEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Cargo.App_DataClass.TransportLines
<div class="section-header">
    <div class="title">
        <img alt="" src="@Url.Content("~/Images/admin/ico-content.png")" />
        Transport Lines
    </div>
</div>
@using (Html.BeginForm("TransportLinesEditSubmit", "TransportAdmin", new { Area = "Admin" }, FormMethod.Post))
{
    for (int i = 0; i < Model.Lines.Count; i++)
    {
         <div class="label">Line</div>
         @Html.TextAreaFor(e => e.Lines[i].LineText, new { rows = "5", cols = "50" })
         <div class="clear"></div>
    }

    <p>
        <input type="submit" class="adminButtonBlue" name="Submit" id="Submit" value="Submit" />
    </p>   
}
