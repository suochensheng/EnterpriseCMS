
@using Web.Framework.UI;
@{
    //success messages
    var successMessages = new List<string>();
    if (TempData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Success)] as IList<string>);
    }
    if (ViewData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Success)] as IList<string>);
    }


    //error messages
    var errorMessages = new List<string>();
    if (TempData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Error)] as IList<string>);
    }
    if (ViewData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("cargo.notifications.{0}", NotifyTypeEnum.Error)] as IList<string>);
    }
}
@foreach (var message in successMessages)
{
    <div class="messageBox messageBoxSuccess">
        @message
    </div>
}
@foreach (var message in errorMessages)
{
    <div class="messageBox messageBoxError">
        @message
    </div>
}